model Contact {
    id             String    @id @default(cuid()) @map("id")
    organizationId String    @map("organization_id")
    type           String    @map("type") 
    value          String    @map("value") 
    purpose        String?   @map("purpose")
    description    String?   @map("description")
    isPrimary      Boolean   @default(false) @map("is_primary")
    createdAt      DateTime  @default(now()) @map("created_at")
    updatedAt      DateTime  @updatedAt @map("updatedAt")
    deletedAt      DateTime? @map("deleted_at")

    organization   Organization @relation(fields: [organizationId], references: [id])

    @@index([organizationId], name: "contact_org_idx")
    @@index([type], name: "contact_type_idx")
    @@index([purpose], name: "contact_purpose_idx")
    @@map("contacts")
}


model Address {
    id           String   @id @default(cuid()) @map("id")
    slug         String   @unique @map("slug")
    title        String?  @map("title")
    addressLine1 String   @map("address_line1")
    addressLine2 String?  @map("address_line2")
    city         String   @map("city")
    state        String?  @map("state")
    postalCode   String   @map("postal_code")
    country      String   @map("country")
    description  String?  @map("description")
    image        String?  @map("image")
    latitude     Decimal? @map("latitude")
    longitude    Decimal? @map("longitude")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    organizationLinks OrganizationAddressLink[]

    @@index([slug])
    @@map("addresses")
}


model SocialLink {
    id          String  @id @default(cuid()) @map("id")
    platform    String  @map("platform")
    url         String  @map("url")
    slug        String  @unique @map("slug")
    title       String? @map("title")
    description String? @map("description")
    image       String? @map("image")
    iconUrl     String? @map("icon_url")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    organizationLinks OrganizationSocialLink[]

    @@index([platform], name: "social_link_platform_idx")
    @@index([slug])
    @@map("social_links")
}


model Industry {
    id             String    @id @default(cuid()) @map("id")
    code           String    @unique @map("code")
    slug           String    @unique @map("slug")
    title          String    @map("title")
    description    String?   @map("description")
    isActive       Boolean   @default(true) @map("is_active")
    sortOrder      Int       @default(0) @map("sort_order")
    createdAt      DateTime  @default(now()) @map("created_at")
    updatedAt      DateTime  @updatedAt @map("updated_at")
    deletedAt      DateTime? @map("deleted_at")
    organizationId String?   @map("organization_id")

    organizations  Organization[]

    @@index([code])
    @@index([slug])
    @@index([isActive])
    @@index([organizationId])
    @@map("industries")
}

